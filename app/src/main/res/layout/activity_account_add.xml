<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AccountDescActivity"
    android:orientation="vertical"
    android:layout_margin="20dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="35sp"
        android:gravity="center"
        android:text="添加账号"/>

    <EditText
        android:id="@+id/account_add_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ems="15"
        android:maxLines="1"
        android:inputType="text"
        android:hint="请输入分组信息"
        android:textSize="25sp"/>

    <EditText
        android:id="@+id/account_add_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="15"
        android:maxLines="1"
        android:inputType="text"
        android:hint="请输入账号类型，如QQ"
        android:textSize="25sp"/>

    <EditText
        android:id="@+id/account_add_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="15"
        android:maxLines="1"
        android:inputType="text"
        android:hint="请输入账号，如QQ号"
        android:textSize="25sp"/>

    <EditText
        android:id="@+id/account_add_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="15"
        android:maxLines="1"
        android:inputType="text"
        android:hint="请输入密码"
        android:textSize="25sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">
        <CheckBox
            android:id="@+id/account_add_auto_generate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:layout_weight="1"
            android:text="自动生成"/>
        <Button
            android:id="@+id/account_add_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:layout_weight="1"
            android:text="保存"/>
    </LinearLayout>

</LinearLayout>