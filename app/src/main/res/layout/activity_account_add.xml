<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AccountDescActivity"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="35sp"
        android:gravity="center"
        android:layout_margin="10dp"
        android:text="添加账号"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">
        <TextView
            android:id="@+id/text_account_add_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="分         组："/>
        <EditText
            android:id="@+id/account_add_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:ems="15"
            android:layout_toRightOf="@+id/text_account_add_group"
            android:layout_alignBaseline="@+id/text_account_add_group"
            android:maxLines="1"
            android:inputType="text"
            android:textSize="25sp"/>

        <TextView
            android:id="@+id/text_account_add_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:layout_below="@+id/text_account_add_group"
            android:layout_marginTop="20dp"
            android:text="账号类型："/>
        <EditText
            android:id="@+id/account_add_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="15"
            android:layout_alignBaseline="@+id/text_account_add_type"
            android:layout_alignLeft="@+id/account_add_group"
            android:maxLines="1"
            android:inputType="text"
            android:textSize="25sp"/>

        <TextView
            android:id="@+id/text_account_add_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:layout_below="@+id/text_account_add_type"
            android:layout_marginTop="20dp"
            android:text="账         号："/>
        <EditText
            android:id="@+id/account_add_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="15"
            android:layout_alignBaseline="@+id/text_account_add_account"
            android:layout_alignLeft="@+id/account_add_group"
            android:maxLines="1"
            android:inputType="text"
            android:textSize="25sp"/>

        <TextView
            android:id="@+id/text_account_add_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:layout_below="@+id/text_account_add_account"
            android:layout_marginTop="20dp"
            android:text="密         码："/>
        <EditText
            android:id="@+id/account_add_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="15"
            android:layout_alignBaseline="@+id/text_account_add_password"
            android:layout_alignLeft="@+id/account_add_group"
            android:maxLines="1"
            android:inputType="text"
            android:textSize="25sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_account_add_password"
            android:layout_margin="10dp">
            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textSize="25sp"
                android:layout_weight="1"
                android:text="自动生成"/>
            <Button
                android:id="@+id/account_add_save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textSize="25sp"
                android:layout_weight="1"
                android:text="保存"/>
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>