<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AccountDescActivity"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="35sp"
        android:gravity="center"
        android:layout_margin="10dp"
        android:text="账号详情"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">
        <TextView
            android:id="@+id/text_account_desc_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:text="分         组："/>
        <TextView
            android:id="@+id/account_desc_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/text_account_desc_group"
            android:textSize="30sp"/>

        <TextView
            android:id="@+id/text_account_desc_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:layout_below="@+id/account_desc_group"
            android:layout_marginTop="20dp"
            android:text="账号类型："/>
        <TextView
            android:id="@+id/account_desc_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/text_account_desc_type"
            android:layout_alignLeft="@+id/account_desc_group"
            android:textSize="30sp"/>

        <TextView
            android:id="@+id/text_account_desc_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:layout_below="@+id/text_account_desc_type"
            android:layout_marginTop="20dp"
            android:text="账         号："/>
        <TextView
            android:id="@+id/account_desc_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/text_account_desc_account"
            android:layout_alignLeft="@+id/account_desc_group"
            android:textSize="30sp"/>

        <TextView
            android:id="@+id/text_account_desc_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:layout_below="@+id/text_account_desc_account"
            android:layout_marginTop="20dp"
            android:text="密         码："/>
        <TextView
            android:id="@+id/account_desc_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/text_account_desc_password"
            android:layout_alignLeft="@+id/account_desc_group"
            android:textSize="30sp"/>
    </RelativeLayout>

</LinearLayout>